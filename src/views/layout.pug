doctype html
html
    head
        title #{title}
        link(rel='stylesheet', href='/stylesheets/style.css')
        link(rel='stylesheet', href='/stylesheets/forms.css')
        link(rel='stylesheet', href='/stylesheets/nav.css')
        link(rel='stylesheet', href='/stylesheets/grid.css')
    body
        div.topBar
            a(href='/')#logo.info.text-md MaszynaNaDzień
            nav
                ul
                    if isAdmin
                        li
                            a(href='/users').info Użytkownicy
                    if isLoggedIn && !isAdmin
                        li
                            a(href='/reservations').info Moje Rezerwacje
                    li
                        a(href='/reservations').info Rezerwacje
                    li
                        a(href='/machines').info Maszyny
                    if isLoggedIn
                        li
                            a(href=`/users/${userId}`).info Profil
        div.middleContainer
            block content
