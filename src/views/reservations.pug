extends layout
block content
    div.grid-header
        h3.info.text-lg.title #{title}
        if errors && errors.length > 0
            each error in errors
                p.danger #{error.msg}
    div.content-container
        div.grid-container
            each reservation in reservations
                div.reservation-item.grid-item
                    div.reservation_date_from.center-content Od #{reservation.date_from}
                    div.reservation_date_to.center-content Do #{reservation.date_to}
                    div.reservation_machine_type.center-content #{reservation.machineType}
                    div.reservation_machine.center-content #{reservation.machine}
                    div.reservation_who.center-content
                        if userView
                            - var link = '/reservations/delete/' + reservation.id
                            form(action=link method="GET")
                                button(type="submit").danger.onlyText.text-md Anuluj rezerwacje
                        else
                            span #{reservation.user}


